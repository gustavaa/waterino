<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            tools:context=".sensordata.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/outer_container"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                card_view:cardCornerRadius="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"
                        android:text="Settings"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_weight="10"
                            android:textStyle="bold"
                            android:text="Push notifications:"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/enable_notifications_chip"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_weight="10"
                            android:textStyle="bold"
                            android:text="Enable Waterino:"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/enable_watering_chip"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_weight="10"
                            android:textStyle="bold"
                            android:text="Force next watering:"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/force_next"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="20">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="20"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:maxLength="2"
                                    android:inputType="numberSigned"
                                    android:gravity="bottom"
                                    android:focusable="true"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:text=""
                                    android:hint="Watering threshold (%)"
                                    android:focusableInTouchMode="true"
                                    android:imeOptions="actionDone"
                                    android:id="@+id/set_watering_threshold"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="20">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="20"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:maxLength="8"
                                    android:inputType="numberDecimal"
                                    android:digits="0123456789."
                                    android:gravity="bottom"
                                    android:focusable="true"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:text=""
                                    android:hint="Update frequency (hours)"
                                    android:focusableInTouchMode="true"
                                    android:imeOptions="actionDone"
                                    android:id="@+id/set_update_frequency"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="20">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="20"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:maxLength="4"
                                    android:inputType="numberSigned"
                                    android:gravity="bottom"
                                    android:focusable="true"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:text=""
                                    android:hint="Watering amount (ml)"
                                    android:focusableInTouchMode="true"
                                    android:imeOptions="actionDone"
                                    android:id="@+id/set_watering_amount"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="20">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="20"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:maxLength="2"
                                    android:inputType="numberSigned"
                                    android:gravity="bottom"
                                    android:focusable="true"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:text=""
                                    android:hint="Maximum watering temperature"
                                    android:focusableInTouchMode="true"
                                    android:imeOptions="actionDone"
                                    android:id="@+id/set_max_temperature"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                card_view:cardCornerRadius="4dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"
                        android:text="Latest data"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_weight="4"
                            android:text="Last updated:"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/latest_timestamp"
                            android:layout_weight="5"
                            android:text="an hour ago"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:text="Soil moisture:"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/latest_moisture"
                            android:layout_weight="3"
                            android:text="87%"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:text="Temperature:"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/latest_temperature"
                            android:layout_weight="3"
                            android:text="23 C"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_weight="4"
                            android:text="Humidity:"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/latest_humidity"
                            android:layout_weight="3"
                            android:text="34%"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:text="Watered:"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/watered"
                            android:layout_weight="3"
                            android:text="Yes"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="18dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Approximated watered amount:"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/watered_ammount"
                            android:text=""/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="10">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:text="Time until next measurement:"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/time_until_next"
                            android:layout_weight="3"
                            android:text="4 hours"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                card_view:cardCornerRadius="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chart_container"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_margin="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Plot"/>

                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/mp_chart"
                        android:layout_width="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:layout_height="300dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>